<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#000000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name='AppInput' parent="Theme.AppCompat.Light">
        <item name='android:colorControlNormal'>@color/colorInputNormal</item>
        <item name='android:colorControlActivated'>@color/colorInputNormal</item>
        <item name='android:textColorHint'>@color/colorWhite</item>
        <item name='android:padding'>15dp</item>
    </style>

    <style name='AppButton' parent='Theme.AppCompat.Light'>
        <item name='android:background'>@color/colorButtonStandard</item>
        <item name='android:textColor'>@color/colorWhite</item>
        <item name='android:layout_marginTop'>10dp</item>
    </style>

</resources>
